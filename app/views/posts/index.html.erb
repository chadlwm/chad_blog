<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>operations</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post, target: '_blank' %></td>
        <td>
          <%= link_to edit_post_path(post) do %> <i class="glyphicon glyphicon-pencil"></i> <% end %>
          | <%= link_to post, method: :delete, data: { confirm: "Are you sure to delete '#{post.title}' ?" } do %> <i class="glyphicon glyphicon-remove"></i> <% end %>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>